fields: next;

proc append(x, y)
precondition: x -> x' * ls(x', nil) * y -> y' * ls(y', nil);
postcondition: x -> z' * ls(z', nil) * y -> nil;
{
	z := x.next ;
	if z = nil then
		tmp := y.next ;
		x.next := tmp ;
		y.next := nil
	else
		tmp := z.next ;
		newptr := new() ;
		newptr.next := tmp ;
		append(newptr, y) ;
		tmp := newptr.next ;
		z.next := tmp ;
		free(newptr) 
	fi
}

precondition: ls(x, nil) * ls(y, nil);
postcondition: ls(x, nil);

ptr1 := new();
ptr1.next := x;

ptr2 := new();
ptr2.next := y;

append(ptr1, ptr2);

x := ptr1.next;
